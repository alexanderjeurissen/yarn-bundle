{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "target": "es2017",
    "lib": ["dom", "esnext", "es2016", "es2017"],
    "types": ["node"],
    "typeRoots": ["./src"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*"]
}
